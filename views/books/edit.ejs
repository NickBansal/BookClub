<% include ../partials/header %>

<div class="container">
    
<form class="new" action="/books/<%= book._id %>?_method=PUT" method="POST">
    <div class="text-center"><h1>Edit Book</h1></div>
    <div class="form-group">
        <!--<label>Book</label>-->
        <input type="text" class="form-control" id="book" name="book[name]" value="<%= book.name %>">
    </div> 
    <div class="form-group">
        <!--<label>Image</label>-->
        <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">    
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="book[writer]" value="<%= book.writer %>">    
    </div>
    <div class="form-group">
        <textarea class="form-control" type="text" name="book[review]" rows="5"><%= book.review %></textarea>
    </div>
    
    <button type="submit" class="btn btn-secondary btn-block">Submit</button>
</form>


